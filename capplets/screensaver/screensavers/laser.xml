<?xml version="1.0" encoding="ISO-8859-1"?>

<screensaver name="laser">

    <command arg="-root"/>

    <number label="Duration of laser burst." low-label="Shorter"
            id="duration" type="slider" default="200" arg="-cycles %"
            low="10" high-label="Longer" high="1000"/>

    <number label="Size of burst." low-label="Segments:" id="count"
            type="spinbutton" default="10" arg="-count %" low="1"
            high="20"/>

    <boolean label="Display screensaver in monochrome." arg-unset=""
             id="mono" arg-set="-mono"/>

</screensaver>
