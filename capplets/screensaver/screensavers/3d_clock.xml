<?xml version="1.0" encoding="ISO-8859-1"?>

<screensaver name="3d clock">

    <command arg="-root"/>

    <number label="Twist:" low-label="Low" id="twist" type="slider"
            default="1" arg="-move %" low="0" high-label="High"
            high="3"/>

    <number label="Twist speed:" low-label="Slow" id="speed"
            type="slider" default="10" arg="-cycle %" low="5"
            high-label="Fast" high="20"/>

    <number label="Wobble:" low-label="Low" id="wobble" type="slider"
            default="2" arg="-wobble %" low="0" high-label="High"
            high="5"/>

    <number label="Size:" low-label="Small" id="size" type="slider"
            default="2" arg="-mag %" low="1" high-label="Large"
            high="5"/>

</screensaver>
